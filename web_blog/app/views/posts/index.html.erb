<div class="jumbotron">
  <div class="container">
    <div>
      <%= image_tag('magic_leap_logo.png') %>
    </div>
    <h1>Magic Leap Web Blog</h1>
    <hr class="small">
    <h2>Hi there magic being!</h2>
  </div>
</div>

<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <% @posts.each do |post| %>
      <div class="col-xs-12">
        <div>
          <h2><%= link_to post.title, post_path(post) %></h2>
        </div>

        <div class="post-author-date">
          <p>Posted by <strong class="username"><%= post.username %></strong> on <%= post.created_at.strftime('%b %d, %Y') %></p>
        </div>
        
        <div>
          <p class="lead"><%= link_to post.content.truncate(290), post_path(post) %></p>
        </div>

        <hr>
      </div>
    <% end %>
  </div>
</div>
