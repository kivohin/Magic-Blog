<div class="login">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>

			<%= form_for :user, url: '/users' do |f| %>

      	Name: <%= f.text_field :username %>
      	Email: <%= f.email_field :email %>
      	Password: <%= f.password_field :password %>
      	<%= f.submit 'Submit', class: "btn-submit" %>

      <% end %>
  
    </div>
  </div>
</div>